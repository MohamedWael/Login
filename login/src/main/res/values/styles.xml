<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginButton">
        <item name="android:background">@drawable/rounded_button_shape</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/login_view_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/login_view_side_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryLoginButton" parent="LoginButton">
        <item name="android:background">@drawable/bordered_rounded_button_shape</item>
        <item name="android:textColor">@color/mainActionColor</item>
    </style>

    <style name="LoginBaseTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/login_input_field_text_size</item>
        <item name="hintTextAppearance">@style/EditTextHintTextSize</item>
        <item name="android:textColorHint">@color/mainActionColor</item>
    </style>

    <style name="TextInputLayout" parent="LoginBaseTextInput">
        <item name="android:layout_marginStart">@dimen/login_view_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/login_view_side_margin</item>
    </style>

    <style name="PasswordTextInputLayout" parent="TextInputLayout">
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/secondaryActionColor</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconDrawable">@drawable/bg_show_password_selector</item>
    </style>

    <style name="EditTextHintTextSize" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/login_input_field_hint_text_size</item>
    </style>


    <style name="LoginInputField" parent="LoginBaseTextInput">
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="PasswordLoginInputField" parent="LoginInputField">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="BorderedButton" parent="LoginButton">
        <item name="android:textColor">@color/mainActionColor</item>
        <item name="android:background">@drawable/bordered_rounded_button_shape</item>
    </style>

    <style name="LoginLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/login_layout_margin</item>
    </style>

    <style name="TitleTextLarge">
        <item name="android:textColor">@color/mainActionColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/login_title_text_size</item>
    </style>

</resources>
